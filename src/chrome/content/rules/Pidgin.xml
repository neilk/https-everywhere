<ruleset name="Pidgin">

	<target host="pidg.in" />
	<target host="www.pidg.in" />
	<target host="pidgin.im" />
	<target host="*.pidgin.im" />


	<securecookie host="^developer\.pidgin\.im$" name=".*" />


	<rule from="^http://(www\.)?pidg\.in/"
		to="https://$1pidg.in/" />

	<!--	Known subdomains:

			- developer
			- hg
			- planet
			- rock
			- rpm
			- stats
			- www
				-->
	<rule from="^http://(\w+\.)?pidgin\.im/"
		to="https://$1pidgin.im/" />

</ruleset>
